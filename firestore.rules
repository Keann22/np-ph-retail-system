rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Functions ---
    // NOTE: The hasAnyRole function has been removed as it uses get() which is not allowed in list queries.
    
    function isOwner(userId) {
        return request.auth.uid == userId;
    }

    function isSuperAdmin() {
      return request.auth != null && request.auth.token.email == 'keneth.ornos@owner.com';
    }

    // --- Collections ---

    match /users/{userId} {
      // Super Admin can do anything.
      // Users can get/update their own profile.
      allow read, write: if isSuperAdmin();
      allow get, update: if isOwner(userId);
      // Any newly authenticated user can create their own user document.
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow new users to check if they are the first user to be assigned the 'Owner' role.
      allow list: if isSuperAdmin() || (request.auth != null && request.query.limit <= 1);
    }

    // Any authenticated user can view product-related info
    match /products/{productId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if isSuperAdmin();
    }
    match /categories/{categoryId} {
        allow get, list: if request.auth != null;
        allow create, update, delete: if isSuperAdmin();
    }
    match /suppliers/{supplierId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if isSuperAdmin();
    }

    // For business data, only the Super Admin can read and write all documents.
    // This is a simplified rule to ensure the app is functional for the primary user.
    match /orders/{orderId} {
      allow read, write: if isSuperAdmin();
    }
    match /orderItems/{itemId} {
      allow read, write: if isSuperAdmin();
    }
    match /customers/{customerId} {
      allow read, write: if isSuperAdmin();
    }
    match /payments/{paymentId} {
      allow read, write: if isSuperAdmin();
    }
    match /returns/{returnId} {
      allow read, write: if isSuperAdmin();
    }
    match /refunds/{refundId} {
      allow read, write: if isSuperAdmin();
    }
    match /inventoryMovements/{movementId} {
      allow read, write: if isSuperAdmin();
    }
    match /expenses/{expenseId} {
      allow read, write: if isSuperAdmin();
    }
    match /badDebts/{badDebtId} {
       allow read, write: if isSuperAdmin();
    }
  }
}

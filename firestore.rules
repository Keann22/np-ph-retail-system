rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isSuperAdmin() {
      // Fast, query-safe check for the super admin email.
      return request.auth != null && request.auth.token.email == 'keneth.ornos@owner.com';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      // Fast, query-safe check for document ownership.
      return isSignedIn() && request.auth.uid == userId;
    }

    function hasAnyRole(roles) {
      // Performs a document read, so this is NOT safe for list queries.
      // It is safe for get, create, update, delete.
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      // Robust check for document and field existence.
      return isSignedIn()
        && userDoc != null
        && userDoc.data.size() != 0
        && 'roles' in userDoc.data
        && userDoc.data.roles.hasAny(roles);
    }


    // --- Collection Rules ---

    match /users/{userId} {
      // A user can always get their own profile. Admins can get any.
      allow get: if isOwner(userId) || isSuperAdmin() || hasAnyRole(['Admin']);
      // LIST is restricted for query safety.
      allow list: if isSuperAdmin() || hasAnyRole(['Admin']);
      // Any signed-in user can create their own profile document.
      allow create: if isOwner(userId);
      // A user can update their own profile. Admins can update any.
      allow update: if isOwner(userId) || isSuperAdmin() || hasAnyRole(['Admin']);
      // Only Admins/Owners can delete users.
      allow delete: if isSuperAdmin() || hasAnyRole(['Admin']);
    }

    match /products/{productId} {
      allow list: if isSignedIn();
      allow get: if isSignedIn();
      allow write: if isSuperAdmin() || hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']);
    }
    
    match /categories/{categoryId} {
      allow list: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow get: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /inventoryMovements/{inventoryMovementId} {
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']);
    }

    match /customers/{customerId} {
      allow list: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow get: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
    }

    match /orders/{orderId} {
      allow list: if isSuperAdmin(); // SAFE for list
      allow get: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
    }

    match /orderItems/{orderItemId} {
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
    }

    match /payments/{paymentId} {
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
    }

    match /expenses/{expenseId} {
      allow list: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow get: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /returns/{returnId} {
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
    }

    match /refunds/{refundId} {
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /badDebts/{badDebtId} {
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /suppliers/{supplierId} {
      allow list: if isSuperAdmin() || hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']);
      allow get: if isSuperAdmin() || hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']);
    }
  }
}

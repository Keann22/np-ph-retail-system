rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isSuperAdmin() {
      // Updated to match the owner's active email
      return request.auth != null && request.auth.token.email == 'ornoskeneth@gmail.com';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function hasAnyRole(roles) {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return isSignedIn()
        && userDoc != null
        && userDoc.data.size() != 0
        && 'roles' in userDoc.data
        && userDoc.data.roles.hasAny(roles);
    }


    // --- Collection Rules ---

    match /users/{userId} {
      allow get: if isOwner(userId) || isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      // Allow Admins and Owners to list users for management
      allow list: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow delete: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /products/{productId} {
      allow list: if isSignedIn();
      allow get: if isSignedIn();
      allow write: if isSuperAdmin() || hasAnyRole(['Inventory', 'Admin', 'Owner']);
    }
    
    match /categories/{categoryId} {
      allow list: if isSignedIn();
      allow get: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /inventoryMovements/{inventoryMovementId} {
      allow list: if isSignedIn();
      allow get: if isSuperAdmin() || hasAnyRole(['Inventory', 'Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Inventory', 'Admin', 'Owner']);
    }

    match /customers/{customerId} {
      allow list: if isSignedIn();
      allow get: if isSignedIn(); // Loosened so Inventory can see names for printing
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
    }

    match /orders/{orderId} {
      allow list: if isSignedIn();
      allow get: if isSignedIn();
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
    }

    match /orderItems/{orderItemId} {
      allow list: if isSignedIn();
      allow get: if isSignedIn();
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
    }

    match /payments/{paymentId} {
      allow list: if isSignedIn();
      allow get: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
    }

    match /expenses/{expenseId} {
      allow list: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow get: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /recurringExpenses/{recurringExpenseId} {
      allow list: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow get: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /returns/{returnId} {
      allow list: if isSignedIn();
      allow get: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
    }

    match /refunds/{refundId} {
      allow list: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow get: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /badDebts/{badDebtId} {
      allow list: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow get: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /suppliers/{supplierId} {
      allow list: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow get: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }
  }
}
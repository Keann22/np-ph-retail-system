rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSuperAdmin() {
      return request.auth != null && request.auth.token.email == 'keneth.ornos@owner.com';
    }

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // This function is safe for GET and WRITE but NOT for LIST queries.
    function hasAnyRole(roles) {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      // Check for document existence and 'roles' field before accessing.
      return isSignedIn() 
        && userDoc.data.size() != 0 
        && 'roles' in userDoc.data 
        && userDoc.data.roles.hasAny(roles);
    }
    
    match /users/{userId} {
      // isOwner() is query-safe as it only uses the request context.
      allow get: if isOwner(userId) || isSuperAdmin();
      allow list: if isSuperAdmin();
      allow create: if isOwner(userId);
      // hasAnyRole is fine here since it's a single-doc write.
      allow update: if isOwner(userId) || hasAnyRole(['Admin', 'Owner']);
      allow delete: if hasAnyRole(['Admin', 'Owner']);
    }

    // --- Collection Rules ---
    // The pattern is:
    // list: only allow for Super Admin (query-safe)
    // get/write: allow for Super Admin OR other roles (uses hasAnyRole, which is fine for single-doc operations)

    match /products/{docId} { 
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Sales', 'Warehouse Manager', 'Admin', 'Owner']); 
      allow write: if isSuperAdmin() || hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']); 
    }
    match /categories/{docId}   { 
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']); 
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']); 
    }
    match /inventoryMovements/{docId} { 
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']); 
      allow write: if isSuperAdmin() || hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']); 
    }
    match /customers/{docId}    { 
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']); 
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']); 
    }
    match /orders/{docId}       { 
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']); 
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']); 
    }
    match /orderItems/{docId}   { 
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']); 
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']); 
    }
    match /payments/{docId}     { 
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']); 
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']); 
    }
    match /expenses/{docId}     { 
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']); 
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']); 
    }
    match /returns/{docId}      { 
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']); 
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']); 
    }
    match /refunds/{docId}      { 
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']); 
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']); 
    }
    match /badDebts/{docId}     { 
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']); 
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']); 
    }
    match /suppliers/{docId}    { 
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']); 
      allow write: if isSuperAdmin() || hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']); 
    }
  }
}

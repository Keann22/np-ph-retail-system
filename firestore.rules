rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Get the user's data from their profile document
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Check if the user has any of the required roles
    function hasAnyRole(requiredRoles) {
      let userData = getUserData();
      // This safely checks for the existence of user data, the 'roles' field, 
      // ensures it's a list, and then checks for role membership.
      return request.auth != null 
             && userData != null 
             && 'roles' in userData 
             && userData.roles is list 
             && userData.roles.hasAny(requiredRoles);
    }
    
    // Check if the user is the owner of the document
    function isOwner(userId) {
        return request.auth.uid == userId;
    }

    // A function to check for the super admin, to be used in rules directly.
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.email == 'keneth.ornos@owner.com';
    }

    // Owner, Admin can manage users
    match /users/{userId} {
      allow read, update: if isOwner(userId) || hasAnyRole(['Owner', 'Admin']) || isSuperAdmin();
      // Allow admins/owners to list all users.
      // Also, allow any authenticated user to perform a very limited list query (limit: 1).
      // This is crucial for the sign-up logic to check if they are the first user.
      allow list: if hasAnyRole(['Owner', 'Admin']) || isSuperAdmin() || (request.auth != null && request.query.limit <= 1);
      allow delete: if hasAnyRole(['Owner', 'Admin']) || isSuperAdmin();
      // Any authenticated user can create their own user document upon sign-up.
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Owner, Admin, Sales roles can manage core sales data
    match /orders/{orderId} {
      allow read, list, create, update: if hasAnyRole(['Owner', 'Admin', 'Sales']) || isSuperAdmin();
    }
    match /orderItems/{itemId} {
      allow read, list, create, update: if hasAnyRole(['Owner', 'Admin', 'Sales']) || isSuperAdmin();
    }
    match /customers/{customerId} {
      allow read, list, create, update, delete: if hasAnyRole(['Owner', 'Admin', 'Sales']) || isSuperAdmin();
    }
    match /payments/{paymentId} {
      allow read, list, create: if hasAnyRole(['Owner', 'Admin', 'Sales']) || isSuperAdmin();
    }
     match /returns/{returnId} {
      allow read, list, create, update: if hasAnyRole(['Owner', 'Admin', 'Sales']) || isSuperAdmin();
    }
     match /refunds/{refundId} {
      allow read, list, create, update: if hasAnyRole(['Owner', 'Admin', 'Sales']) || isSuperAdmin();
    }


    // Owner, Admin, Warehouse Manager can manage inventory and suppliers
    match /products/{productId} {
      allow read, list: if request.auth != null;
      allow create, update: if hasAnyRole(['Owner', 'Admin', 'Warehouse Manager']) || isSuperAdmin();
      // Only Owner/Admin should be able to delete products to prevent accidents
      allow delete: if hasAnyRole(['Owner', 'Admin']) || isSuperAdmin();
    }
    match /inventoryMovements/{movementId} {
      // Create is triggered by other actions, so it needs to be open to relevant roles
      allow create: if hasAnyRole(['Owner', 'Admin', 'Warehouse Manager', 'Sales']) || isSuperAdmin();
      allow read, list: if hasAnyRole(['Owner', 'Admin', 'Warehouse Manager']) || isSuperAdmin();
    }
     match /suppliers/{supplierId} {
      allow read, list: if request.auth != null;
      allow create, update, delete: if hasAnyRole(['Owner', 'Admin', 'Warehouse Manager']) || isSuperAdmin();
    }
    match /categories/{categoryId} {
        allow read, list: if request.auth != null;
        allow create, update, delete: if hasAnyRole(['Owner', 'Admin']) || isSuperAdmin();
    }

    // Owner, Admin can manage financials
    match /expenses/{expenseId} {
      allow read, list, create, update, delete: if hasAnyRole(['Owner', 'Admin']) || isSuperAdmin();
    }
    match /badDebts/{badDebtId} {
       allow read, list, create, update, delete: if hasAnyRole(['Owner', 'Admin']) || isSuperAdmin();
    }
  }
}

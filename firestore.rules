rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Functions ---
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // WARNING: Do not use this function for 'list' rules on collections. It contains a `get()` call.
    function hasAnyRole(requiredRoles) {
      let userData = getUserData();
      return request.auth != null 
             && userData != null 
             && 'roles' in userData 
             && userData.roles is list 
             && userData.roles.hasAny(requiredRoles);
    }
    
    function isOwner(userId) {
        return request.auth.uid == userId;
    }

    function isSuperAdmin() {
      return request.auth != null && request.auth.token.email == 'keneth.ornos@owner.com';
    }

    // --- Collections ---

    match /users/{userId} {
      allow read, update: if isSuperAdmin() || isOwner(userId) || hasAnyRole(['Owner', 'Admin']);
      allow delete: if isSuperAdmin() || hasAnyRole(['Owner', 'Admin']);
      allow create: if request.auth != null && request.auth.uid == userId;
      // LIST: SuperAdmin can list all. Any new user can check if they're the first (for role assignment).
      allow list: if isSuperAdmin() || (request.auth != null && request.query.limit <= 1);
    }

    match /orders/{orderId} {
      allow read, create, update: if isSuperAdmin() || hasAnyRole(['Owner', 'Admin', 'Sales']);
      allow list: if isSuperAdmin();
    }
    match /orderItems/{itemId} {
      allow read, create, update: if isSuperAdmin() || hasAnyRole(['Owner', 'Admin', 'Sales']);
      allow list: if isSuperAdmin();
    }
    match /customers/{customerId} {
      allow read, create, update, delete: if isSuperAdmin() || hasAnyRole(['Owner', 'Admin', 'Sales']);
      allow list: if isSuperAdmin();
    }
    match /payments/{paymentId} {
      allow read, create: if isSuperAdmin() || hasAnyRole(['Owner', 'Admin', 'Sales']);
      allow list: if isSuperAdmin();
    }
     match /returns/{returnId} {
      allow read, create, update: if isSuperAdmin() || hasAnyRole(['Owner', 'Admin', 'Sales']);
      allow list: if isSuperAdmin();
    }
     match /refunds/{refundId} {
      allow read, create, update: if isSuperAdmin() || hasAnyRole(['Owner', 'Admin', 'Sales']);
      allow list: if isSuperAdmin();
    }


    match /products/{productId} {
      allow read, list: if request.auth != null;
      allow create, update: if isSuperAdmin() || hasAnyRole(['Owner', 'Admin', 'Warehouse Manager']);
      allow delete: if isSuperAdmin() || hasAnyRole(['Owner', 'Admin']);
    }
    match /inventoryMovements/{movementId} {
      allow read, create: if isSuperAdmin() || hasAnyRole(['Owner', 'Admin', 'Warehouse Manager', 'Sales']);
      allow list: if isSuperAdmin();
    }
     match /suppliers/{supplierId} {
      allow read, list: if request.auth != null;
      allow create, update, delete: if isSuperAdmin() || hasAnyRole(['Owner', 'Admin', 'Warehouse Manager']);
    }
    match /categories/{categoryId} {
        allow read, list: if request.auth != null;
        allow create, update, delete: if isSuperAdmin() || hasAnyRole(['Owner', 'Admin']);
    }

    match /expenses/{expenseId} {
      allow read, create, update, delete: if isSuperAdmin() || hasAnyRole(['Owner', 'Admin']);
      allow list: if isSuperAdmin();
    }
    match /badDebts/{badDebtId} {
       allow read, create, update, delete: if isSuperAdmin() || hasAnyRole(['Owner', 'Admin']);
       allow list: if isSuperAdmin();
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.email == 'ornoskeneth@gmail.com';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasAnyRole(roles) {
      return isSignedIn() 
        && 'roles' in getUserData() 
        && getUserData().roles.hasAny(roles);
    }


    // --- Collection Rules ---

    match /users/{userId} {
      allow get: if isOwner(userId) || isSuperAdmin() || (isSignedIn() && getUserData().roles.hasAny(['Admin', 'Owner']));
      allow list: if isSuperAdmin() || (isSignedIn() && getUserData().roles.hasAny(['Admin', 'Owner']));
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isSuperAdmin() || (isSignedIn() && getUserData().roles.hasAny(['Admin', 'Owner']));
      allow delete: if isSuperAdmin() || (isSignedIn() && getUserData().roles.hasAny(['Admin', 'Owner']));
    }

    match /products/{productId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin() || hasAnyRole(['Inventory', 'Admin', 'Owner']);
    }
    
    match /categories/{categoryId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /inventoryMovements/{inventoryMovementId} {
      allow list, get: if isSignedIn();
      allow write: if isSuperAdmin() || hasAnyRole(['Inventory', 'Admin', 'Owner', 'Sales']);
    }

    match /customers/{customerId} {
      allow list: if isSignedIn(); // Inventory needs to map names for printing
      allow get: if isSignedIn(); 
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
    }

    match /orders/{orderId} {
      allow list, get: if isSignedIn();
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner', 'Inventory']);
    }

    match /orderItems/{orderItemId} {
      allow list, get: if isSignedIn();
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
    }

    match /payments/{paymentId} {
      allow list, get: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
    }

    match /expenses/{expenseId} {
      allow read, write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /recurringExpenses/{recurringExpenseId} {
      allow read, write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /returns/{returnId} {
      allow list: if isSignedIn();
      allow get: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow write: if isSuperAdmin() || hasAnyRole(['Sales', 'Admin', 'Owner']);
    }

    match /refunds/{refundId} {
      allow read, write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /badDebts/{badDebtId} {
      allow read, write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }

    match /suppliers/{supplierId} {
      allow read, write: if isSuperAdmin() || hasAnyRole(['Admin', 'Owner']);
    }
  }
}

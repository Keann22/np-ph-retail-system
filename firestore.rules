rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSuperAdmin() {
      return request.auth != null && request.auth.token.email == 'keneth.ornos@owner.com';
    }

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // This function is safe for GET and WRITE but NOT for LIST queries.
    function hasAnyRole(roles) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(roles);
    }
    
    match /users/{userId} {
      // A user can read their own profile, or a super admin can read any profile.
      // This rule is query-safe and avoids circular dependencies.
      allow get: if isOwner(userId) || isSuperAdmin();
      // Only a super admin can list all users to prevent expensive reads and data leakage.
      allow list: if isSuperAdmin();
      // A user can create their own profile document.
      allow create: if isOwner(userId);
      // A user can update their own profile, or an Admin/Owner can update any profile.
      allow update: if isOwner(userId) || hasAnyRole(['Admin', 'Owner']);
      // Only an Admin or Owner can delete a user profile.
      allow delete: if hasAnyRole(['Admin', 'Owner']);
    }

    // This is a catch-all rule that grants the super admin full read/write access to everything.
    // It is evaluated first for the super admin, short-circuiting other rules.
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // The rules below apply to non-super-admin users.
    match /products/{docId} { 
      allow get: if hasAnyRole(['Sales', 'Warehouse Manager', 'Admin', 'Owner']); 
      allow list: if hasAnyRole(['Sales', 'Warehouse Manager', 'Admin', 'Owner']);
      allow write: if hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']); 
    }
    match /categories/{docId}   { 
      allow get: if hasAnyRole(['Admin', 'Owner']); 
      allow list: if hasAnyRole(['Admin', 'Owner']);
      allow write: if hasAnyRole(['Admin', 'Owner']); 
    }
    match /inventoryMovements/{docId} { 
      allow get: if hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']); 
      allow list: if hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']);
      allow write: if hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']); 
    }
    match /customers/{docId}    { 
      allow get: if hasAnyRole(['Sales', 'Admin', 'Owner']); 
      allow list: if hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow write: if hasAnyRole(['Sales', 'Admin', 'Owner']); 
    }
    match /orders/{docId}       { 
      allow get: if hasAnyRole(['Sales', 'Admin', 'Owner']); 
      allow list: if hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow write: if hasAnyRole(['Sales', 'Admin', 'Owner']); 
    }
    match /orderItems/{docId}   { 
      allow get: if hasAnyRole(['Sales', 'Admin', 'Owner']); 
      allow list: if hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow write: if hasAnyRole(['Sales', 'Admin', 'Owner']); 
    }
    match /payments/{docId}     { 
      allow get: if hasAnyRole(['Sales', 'Admin', 'Owner']); 
      allow list: if hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow write: if hasAnyRole(['Sales', 'Admin', 'Owner']); 
    }
    match /expenses/{docId}     { 
      allow get: if hasAnyRole(['Admin', 'Owner']); 
      allow list: if hasAnyRole(['Admin', 'Owner']);
      allow write: if hasAnyRole(['Admin', 'Owner']); 
    }
    match /returns/{docId}      { 
      allow get: if hasAnyRole(['Sales', 'Admin', 'Owner']); 
      allow list: if hasAnyRole(['Sales', 'Admin', 'Owner']);
      allow write: if hasAnyRole(['Sales', 'Admin', 'Owner']); 
    }
    match /refunds/{docId}      { 
      allow get: if hasAnyRole(['Admin', 'Owner']); 
      allow list: if hasAnyRole(['Admin', 'Owner']);
      allow write: if hasAnyRole(['Admin', 'Owner']); 
    }
    match /badDebts/{docId}     { 
      allow get: if hasAnyRole(['Admin', 'Owner']); 
      allow list: if hasAnyRole(['Admin', 'Owner']);
      allow write: if hasAnyRole(['Admin', 'Owner']); 
    }
    match /suppliers/{docId}    { 
      allow get: if hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']); 
      allow list: if hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']);
      allow write: if hasAnyRole(['Warehouse Manager', 'Admin', 'Owner']); 
    }
  }
}
